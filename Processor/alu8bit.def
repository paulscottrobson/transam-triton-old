80-87 		4 	"ADD A,@N"		carry = 0;a = add8BitCarry(a,@R)
C6 			7 	"ADD A,@1"		carry = 0;a = add8BitCarry(a,fetch())

88-8F 		4 	"ADC A,@N"		a = add8BitCarry(a,@R)
CE 			7 	"ADC A,@1"		a = add8BitCarry(a,fetch())

90-97 		4 	"SUB A,@N"		carry = 0;a = sub8BitCarry(a,@R)
D6 			7 	"SUB A,@1"		carry = 0;a = sub8BitCarry(a,fetch())

98-9F 		4 	"SBC A,@N"		a = sub8BitCarry(a,@R)
DE 			7 	"SBC A,@1"		a = sub8BitCarry(a,fetch())


A0-A7 		4 	"AND A,@N"		carry = 0;szValue = a = (a & @R);negate = 0;halfCarry = 1;
E6 			7 	"AND A,@1"		carry = 0;szValue = a = (a & fetch());negate = 0;halfCarry = 1;

A8-AF 		4 	"XOR A,@N"		carry = 0;szValue = a = (a ^ @R);negate = 0;halfCarry = 0;
EE 			7 	"XOR A,@1"		carry = 0;szValue = a = (a ^ fetch());negate = 0;halfCarry = 0;

B0-B7 		4 	"OR A,@N"		carry = 0;szValue = a = (a | @R);negate = 0;halfCarry = 0;
F6 			7 	"OR A,@1"		carry = 0;szValue = a = (a | fetch());negate = 0;halfCarry = 0;


B8-BF 		4 	"CP  A,@N"		carry = 0;sub8BitCarry(a,@R)
FE 			7 	"CP  A,@1"		carry = 0;sub8BitCarry(a,fetch())


04-2C,8 	4 	"INC @N"		@R = increment8Bit(@R)
34			11	"INC (HL)"		temp16 = HL;writeMemory(temp16,increment8Bit(readMemory(temp16)))
3C 			4 	"INC A"			a = increment8Bit(a)

05-2D,8 	4 	"DEC @N"		@R = decrement8Bit(@R)
35			11	"DEC (HL)"		temp16 = HL;writeMemory(temp16,decrement8Bit(readMemory(temp16)))
3D 			4 	"DEC A"			a = decrement8Bit(a)
